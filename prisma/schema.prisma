generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PRESTADOR
  EMPREGADOR
}

enum PlanCode {
  BRONZE
  PRATA
  OURO
  PLATINA
}

enum HighlightStatus {
  ACTIVE
  EXPIRED
}

enum AdStatus {
  ACTIVE
  EXPIRED
}

enum AdTarget {
  ALL
  WORKERS
  EMPLOYERS
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role      @default(PRESTADOR)
  whatsapp      String?
  cnpj          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  cep          String?
  street       String?
  number       String?
  complement   String?
  neighborhood String?
  city         String?
  state        String?

  accounts        Account[]
  sessions        Session[]
  workerProfile   WorkerProfile?
  employerProfile EmployerProfile?
  highlights      Highlight[]
  ads             Ad[]
  vagasPublicadas Vaga[]           @relation("VagasEmpregador")
  vagasFavoritas  VagaFavorita[]   @relation("VagasFavoritas")
  candidaturas    Candidatura[]    @relation("Candidaturas")

  @@index([role])
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workerProfiles   WorkerProfile[]
  employerProfiles EmployerProfile[]
  vagas            Vaga[]

  @@index([slug])
}

model WorkerProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  categoryId   String
  averagePrice Decimal  @db.Decimal(10, 2)
  availability Json     @default("{}")
  description  String   @db.Text
  resumeUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id])

  @@index([userId])
  @@index([categoryId])
}

model EmployerProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  advertisedService String
  budget            Decimal  @db.Decimal(10, 2)
  categoryId        String
  availability      Json     @default("{}")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id])

  @@index([userId])
  @@index([categoryId])
}

model HighlightPlan {
  id           String   @id @default(cuid())
  code         PlanCode @unique
  name         String
  price        Decimal  @db.Decimal(10, 2)
  durationDays Int
  priority     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  highlights Highlight[]
  ads        Ad[]

  @@index([code])
  @@index([priority])
}

model Highlight {
  id        String          @id @default(cuid())
  userId    String
  planId    String
  startsAt  DateTime        @default(now())
  endsAt    DateTime
  status    HighlightStatus @default(ACTIVE)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan HighlightPlan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
  @@index([status])
  @@index([endsAt])
}

model Ad {
  id        String   @id @default(cuid())
  ownerId   String
  planId    String
  title     String
  content   String   @db.Text
  imageUrl  String?
  target    AdTarget @default(ALL)
  startsAt  DateTime @default(now())
  endsAt    DateTime
  status    AdStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  plan  HighlightPlan @relation(fields: [planId], references: [id])

  @@index([ownerId])
  @@index([planId])
  @@index([status])
  @@index([target])
  @@index([endsAt])
}

enum VagaStatus {
  ABERTA
  FECHADA
  PAUSADA
}

enum SalarioTipo {
  FIXO
  A_COMBINAR
}

// ADICIONE ESTES MODELS no final do schema

model Vaga {
  id           String      @id @default(cuid())
  empregadorId String
  titulo       String
  descricao    String      @db.Text
  salarioTipo  SalarioTipo
  salarioValor Decimal?    @db.Decimal(10, 2)
  categoryId   String
  status       VagaStatus  @default(ABERTA)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  empregador   User           @relation("VagasEmpregador", fields: [empregadorId], references: [id], onDelete: Cascade)
  category     Category       @relation(fields: [categoryId], references: [id])
  etapas       VagaEtapa[]
  favoritos    VagaFavorita[]
  candidaturas Candidatura[]

  @@index([empregadorId])
  @@index([categoryId])
  @@index([status])
}

model VagaEtapa {
  id        String   @id @default(cuid())
  vagaId    String
  ordem     Int
  nome      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vaga Vaga @relation(fields: [vagaId], references: [id], onDelete: Cascade)

  @@index([vagaId])
}

model VagaFavorita {
  id          String   @id @default(cuid())
  vagaId      String
  prestadorId String
  createdAt   DateTime @default(now())

  vaga      Vaga @relation(fields: [vagaId], references: [id], onDelete: Cascade)
  prestador User @relation("VagasFavoritas", fields: [prestadorId], references: [id], onDelete: Cascade)

  @@unique([vagaId, prestadorId])
  @@index([vagaId])
  @@index([prestadorId])
}

model Candidatura {
  id          String   @id @default(cuid())
  vagaId      String
  prestadorId String
  mensagem    String?  @db.Text
  status      String   @default("PENDENTE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vaga      Vaga @relation(fields: [vagaId], references: [id], onDelete: Cascade)
  prestador User @relation("Candidaturas", fields: [prestadorId], references: [id], onDelete: Cascade)

  @@unique([vagaId, prestadorId])
  @@index([vagaId])
  @@index([prestadorId])
}
